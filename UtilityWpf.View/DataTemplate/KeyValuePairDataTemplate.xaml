<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pt="http://propertytools.org/wpf"
xmlns:viewmodel="clr-namespace:UtilityWpf.ViewModel;assembly=UtilityWpf.ViewModel"
                 >

    <ResourceDictionary.MergedDictionaries>
     
        <!--<ResourceDictionary  Source="/UtilityWpf.View;component/DataTemplate/PropertyDataTemplateSelector.xaml"/>-->
    </ResourceDictionary.MergedDictionaries>
    
    <DataTemplate  x:Key="KeyValuePairTemplate">

            <Grid Margin="2"  MinHeight="50">
                <Grid.RowDefinitions >
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock FontWeight = "Bold"    TextAlignment="Left" Text="{Binding Path=Key}" />
            <ContentPresenter Grid.Row="1" HorizontalAlignment="Center"  Margin = "1" Content="{Binding Path=Value}" >
                <ContentPresenter.ContentTemplate>
                    <DataTemplate>
                        <pt:PropertyGrid  SelectedObject="{Binding }"/>
                    </DataTemplate>
                </ContentPresenter.ContentTemplate>
               
            </ContentPresenter>
        </Grid>

    </DataTemplate>





</ResourceDictionary>