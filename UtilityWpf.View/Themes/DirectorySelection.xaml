<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UtilityWpf.View"
    xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf" 
		>

    <Style x:Key="DirectorySelectionStyle"  TargetType="{x:Type local:DirectorySelectionControl}">


        <!--<Setter Property="ItemContainerStyle" Value="{StaticResource CustomListBoxItem}"/>-->
        <Setter Property="Template">
            <Setter.Value >
                <ControlTemplate TargetType="{x:Type local:DirectorySelectionControl }">
                    <GroupBox  Header="Directory">
                        <StackPanel Width="400" VerticalAlignment="Center">
                            <p:DirectoryPicker Directory="{Binding Directory}" ExploreButtonContent="Explore..." BrowseButtonContent="Browse..." Margin="4"/>
                            <Label Content="{Binding Directory}"/>
                        </StackPanel>
                    </GroupBox>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>