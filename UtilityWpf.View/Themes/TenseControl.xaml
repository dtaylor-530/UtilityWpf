<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpftoggleswitch="clr-namespace:WPFToggleSwitch;assembly=WPFToggleSwitch"
                    xmlns:enm="clr-namespace:UtilityEnum;assembly=UtilityEnum"
                    xmlns:local="clr-namespace:UtilityWpf.View">

    <Style TargetType="{x:Type local:TenseControl }">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TenseControl }" >
                    <wpftoggleswitch:ToggleSwitch x:Name = "ToggleSwitch"                  
                                                  CheckedText = "{Binding Source={x:Static enm:Tense.Past}}"           
                                                  UncheckedText = "{Binding Source={x:Static enm:Tense.Future}}"
                             />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>