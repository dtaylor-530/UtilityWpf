            Text="{Binding TotalCount, StringFormat='The are \{0} trades matching filter'}" />-->

            <RepeatButton
                Height="26"
                Padding="0"
                Command="{Binding PreviousCommand}"
                ToolTip="Move to previous page">
                <!--<Ellipse Width="24" Height="24" Fill="Bisque"/>-->
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Kind="SkipPrevious" />
            </RepeatButton>

            <TextBlock Margin="8,0,0,0" VerticalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Page {0} of {1}">
                        <Binding Path="CurrentPage" />
                        <Binding Path="PageCount" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <RepeatButton
                Height="26"
                Margin="8,0,0,0"
                Padding="0"
                Command="{Binding NextCommand}"
                ToolTip="Move to next page">
                <!--<Ellipse Width="24" Height="24" Fill="Red"/>-->
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Kind="SkipNext" />
            </RepeatButton>


            <TextBlock
                Margin="8,0,4,0" Width="40" Height="25" Background="WhiteSmoke"
                HorizontalAlignment="Center"
               
                VerticalAlignment="Center"
                Text="{Binding PageSize, StringFormat='(\{0} items per page)'}" />


        </StackPanel>

        </ToolBar>
