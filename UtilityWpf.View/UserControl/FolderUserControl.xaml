<UserControl x:Class="UtilityWpf.View.FolderUserControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:UtilityWpf.View"
             xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf" 
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="300"  Name="usercontrol">
    <Grid>
        <GroupBox Name="gp" Header="Directory">
            <StackPanel Width="400" VerticalAlignment="Center">
                <p:DirectoryPicker Directory="{Binding Directory}" ExploreButtonContent="Explore..." BrowseButtonContent="Browse..." Margin="4"/>
                <Label Content="{Binding Directory}"/>
            </StackPanel>
        </GroupBox>
    </Grid>

	
</UserControl>
