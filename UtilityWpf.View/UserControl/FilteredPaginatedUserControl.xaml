<UserControl x:Class="UtilityWpf.View.FilteredPaginatedUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilityWpf.View"
             mc:Ignorable="d" 
       
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        
        <DockPanel  Name="usercontrol">
            <local:NavigatorUserControl DockPanel.Dock="Top" PageRequest="{Binding PageRequest}"></local:NavigatorUserControl>

            
            <DataGrid 
    
          ItemsSource="{Binding PaginatedItems,Mode=OneWay,IsAsync=True}" 
          CanUserAddRows="False"
          AutoGenerateColumns="True"
                  
                  EnableColumnVirtualization = "True"
EnableRowVirtualization = "True">

            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>
