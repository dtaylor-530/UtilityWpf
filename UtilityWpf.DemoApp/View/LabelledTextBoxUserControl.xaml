<UserControl x:Class="UtilityWpf.DemoApp.LabelledTextBoxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilityWpf.DemoApp"
             xmlns:util="clr-namespace:UtilityWpf.View;assembly=UtilityWpf.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <util:LayoutGroup>
            <util:LabelledTextBox Label="Thing1" Text="{Binding Thing1}"/>
            <util:LabelledTextBox Label="Thing2" Text="{Binding Thing2}"/>
            <util:LabelledTextBox Label="Thing3" Text="{Binding Thing3}"/>
        </util:LayoutGroup>
    </Grid>
</UserControl>
